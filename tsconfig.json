{
  "compilerOptions": {
    "downlevelIteration": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    // "moduleResolution": "bundler",
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*"
    // "vitest.config.ts",
    // "vitest.setup.ts"
  ]
}
